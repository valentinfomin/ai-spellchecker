{
  "manifest_version": 3,
  "name": "Local AI: Private Spell Checker & Chat",
  "description": "Privacy-first AI spell checker and webpage summarizer running 100% locally using WebGPU.",
  "version": "1.2",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "contextMenus", 
    "storage", 
    "activeTab",
    "sidePanel"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open AI Spellchecker"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "host_permissions": [
    "https://huggingface.co/*",
    "https://raw.githubusercontent.com/*"
  ]
}
