{
  "manifest_version": 3,
  "name": "AI Spellchecker",
  "version": "1.2",
  "permissions": [
    "contextMenus", 
    "storage", 
    "activeTab",
    "sidePanel"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open AI Spellchecker"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "host_permissions": [
    "https://huggingface.co/*",
    "https://raw.githubusercontent.com/*"
  ]
}
